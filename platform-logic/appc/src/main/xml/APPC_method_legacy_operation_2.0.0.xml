<service-logic module='Appc-API' version='2.0.0.0'>
	<method rpc='legacy_operation' mode='sync'>
		<block atomic='`true' `>
			<outcome value='1'>
				<execute plugin='`org.openecomp.appc.dg.common.LegacyUtil' `
					method='`prepareRequest' `></execute>
			</outcome>
			<outcome value='2'>
				<call mode='`sync' ` rpc='`topology-operation-all' ` module='`APPC' `
					version='`2.0.0' `>
					<outcome value='failure'>
						<execute plugin='`org.openecomp.appc.dg.common.LegacyUtil' `
							method='`convertNegativeResponse' `>
							<outcome value='success'>
								<return status='`failure' `>
									<parameter name='org.openecomp.appc.dg.error' value='`$error-message`' />
									<parameter name='SvcLogic.status.code' value='`$error-code`' />
									<parameter name='dg.status.message.param.errorMsg'
										value='`$error-message`' />
								</return>
							</outcome>
						</execute>
					</outcome>
					<outcome value='success'>
						<execute plugin='`org.openecomp.appc.dg.common.LegacyUtil' `
							method='`convertPositiveResponse' `></execute>
					</outcome>
				</call>
			</outcome>
			<outcome value='3'>
				<return status='`success' `></return>
			</outcome>
		</block>
	</method>
</service-logic>