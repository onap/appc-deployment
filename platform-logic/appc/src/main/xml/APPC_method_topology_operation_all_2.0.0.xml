<service-logic module='APPC' version='2.0.0'>
	<method rpc='topology-operation-all' mode='sync'>
		<switch test='`$org.openecomp.appc.action' `>
			<outcome value='rebuild'>
				<execute plugin='`org.openecomp.appc.adapter.iaas.ProviderAdapter' `
					method='`rebuildServer' `>
					<parameter name='org.openecomp.appc.instance.url' value='`$org.openecomp.appc.vmid`' />
					<parameter name='org.openecomp.appc.identity.url' value='`$org.openecomp.appc.identity.url`' />
					<parameter name='org.openecomp.appc.provider.name' value='`OpenStack`' />
					<outcome value='success'>
						<return status='`success' `></return>
					</outcome>
					<outcome value='Other'>
						<return status='`failure' `></return>
					</outcome>
				</execute>
			</outcome>
			<outcome value='restart'>
				<execute plugin='`org.openecomp.appc.adapter.iaas.ProviderAdapter' `
					method='`restartServer' `>
					<parameter name='org.openecomp.appc.instance.url' value='`$org.openecomp.appc.vmid`' />
					<parameter name='org.openecomp.appc.identity.url' value='`$org.openecomp.appc.identity.url`' />
					<parameter name='org.openecomp.appc.provider.name' value='`OpenStack`' />
					<outcome value='success'>
						<return status='`success' `></return>
					</outcome>
					<outcome value='failure'>
						<return status='`failure' `></return>
					</outcome>
				</execute>
			</outcome>
			<outcome value='evacuate'>
				<execute plugin='`org.openecomp.appc.adapter.iaas.ProviderAdapter' `
					method='`evacuateServer' `>
					<parameter name='org.openecomp.appc.instance.url' value='`$org.openecomp.appc.vmid`' />
					<parameter name='org.openecomp.appc.identity.url' value='`$org.openecomp.appc.identity.url`' />
					<parameter name='org.openecomp.appc.provider.name' value='`OpenStack`' />
					<outcome value='success'>
						<return status='`failure' `>
							<parameter name='error-message' value='`This action is not yet implemented`' />
							<parameter name='error-code' value='`500`' />
						</return>
					</outcome>
					<outcome value='Other'>
						<return status='`failure' `>
							<parameter name='error-message' value='`This action is not yet implemented`' />
							<parameter name='error-code' value='`500`' />
						</return>
					</outcome>
				</execute>
			</outcome>
			<outcome value='snapshot'>
				<execute plugin='`org.openecomp.appc.adapter.iaas.ProviderAdapter' `
					method='`createSnapshot' `>
					<parameter name='org.openecomp.appc.instance.url' value='`$org.openecomp.appc.vmid`' />
					<parameter name='org.openecomp.appc.identity.url' value='`$org.openecomp.appc.identity.url`' />
					<parameter name='org.openecomp.appc.provider.name' value='`OpenStack`' />
					<outcome value='success'>
						<return status='`success' `></return>
					</outcome>
					<outcome value='Other'>
						<return status='`failure' `></return>
					</outcome>
				</execute>
			</outcome>
			<outcome value='migrate'>
				<execute plugin='`org.openecomp.appc.adapter.iaas.ProviderAdapter' `
					method='`migrateServer' `>
					<parameter name='org.openecomp.appc.instance.url' value='`$org.openecomp.appc.vmid`' />
					<parameter name='org.openecomp.appc.identity.url' value='`$org.openecomp.appc.identity.url`' />
					<parameter name='org.openecomp.appc.provider.name' value='`OpenStack`' />
					<outcome value='success'>
						<return status='`success' `></return>
					</outcome>
					<outcome value='Other'>
						<return status='`failure' `></return>
					</outcome>
				</execute>
			</outcome>
			<outcome value='Other'>
				<return status='`failure' `>
					<parameter name='error-message' value='`Unknown action specified`' />
					<parameter name='error-code' value='`404`' />
				</return>
			</outcome>
		</switch>
	</method>
</service-logic>